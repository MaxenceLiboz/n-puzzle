{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Own debugger build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ft_puzzle",
            "args": [
                "${workspaceFolder}/puzzles/ngen.txt",
                "0"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true
            },
            "launchCompleteCommand": "exec-run",
        }
    ]
}
